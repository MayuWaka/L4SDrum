<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/butai"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="6"
        app:rowCount="2">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="cymbal1"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="0"
            app:srcCompat="@drawable/cymbal1" />

        <ImageButton
            android:id="@+id/triangle"
            android:layout_width="95dp"
            android:layout_height="98dp"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="triangle"
            android:scaleType="fitCenter"
            android:src="@drawable/triangel"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="tom1"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="0"
            app:srcCompat="@drawable/tom1" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="tom2"
            android:scaleType="fitCenter"
            app:layout_column="3"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="0"
            app:srcCompat="@drawable/tom2" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="cymbal2"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="0"
            app:srcCompat="@drawable/cymbal2" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            app:layout_gravity="fill_horizontal|fill_vertical" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="hihat"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="1"
            app:srcCompat="@drawable/hihat" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="snare"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="1"
            app:srcCompat="@drawable/snare" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="203dp"
            android:layout_height="136dp"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="bass"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="1"
            app:srcCompat="@drawable/bass" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="tom3"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="1"
            app:srcCompat="@drawable/tom3" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:backgroundTint="#FFFFFF"
            android:onClick="cymbal3"
            android:scaleType="fitCenter"
            app:layout_column="5"
            app:layout_gravity="fill_horizontal|fill_vertical"
            app:layout_row="1"
            app:srcCompat="@drawable/cymbal3" />
    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>